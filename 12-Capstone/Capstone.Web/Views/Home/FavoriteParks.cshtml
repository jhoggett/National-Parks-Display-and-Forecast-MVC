 @model List<SurveyVM>
@{
    ViewData["Title"] = "FavoriteParks";
}

<h2>FavoriteParks</h2>

<body>
    <div style="text-align:left;padding-left: 15px; font-size:2vw;"><h1>Favorite Parks</h1></div>

    <div class="flex-container" style="overflow-x:auto">
        <table>
            <tr style="text-align:center;padding-left: 15px; font-size:2vw;">
                <th></th>
                <th style="text-align:left">Park</th>
                <th>Favorites</th>
            </tr>
            @{foreach (SurveyVM item in Model)
                {
                    <tr>
                        <td><div class="flex-item"><img style="border:1px solid #ddd;border-radius: 4px;padding: 5px;width: 150px;" src="~/images/img/parks/@(item.Park.ParkCode).jpg" /></div></td>

                        <td style="text-align:left;padding-left: 15px; font-size:2vw;">
                            <a href="~/Home/Detail?ParkCode=@(item.Park.ParkCode)"><div class="flex-item">@item.Park.ParkCode</div></a>
                        </td>
                        <td style="text-align:center;padding-left: 15px; font-size:2vw;"><div>@item.NumberOfSurveys</div></td>
                    </tr>

                }
            }
        </table>
    </div>
</body>